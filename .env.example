# ENVIRONMENT
NODE_ENV=development
LOG_LEVEL=debug

# SERVICE PORTS
PORT=3000
NOTIFIER_PORT=3002

# BACKEND
DB_PATH=./data/database.sqlite
UPLOAD_DIR=./data/uploads
# Generate this using "bun scripts/generate-token.ts jwt"
JWT_SECRET=
PUBLIC_URL=http://localhost:5173

# NOTIFIER
NOTIFIER_URL=http://localhost:3002
NOTIFIER_DATA_PATH=./data/notifier

# WhatsApp groups (optional)
WHATSAPP_GROUP_AGENT=
WHATSAPP_GROUP_DEV=

# WHATSAPP CLOUD API
